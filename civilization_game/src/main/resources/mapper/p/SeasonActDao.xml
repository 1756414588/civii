<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.game.dao.p.SeasonActDao">

    <insert id="insert" parameterType="com.game.season.SeasonInfo">
         INSERT INTO p_season_activity (roleId,seasonType,info) VALUES (#{roleId},#{seasonType},#{info}) ON DUPLICATE KEY UPDATE info =VALUES(info);
    </insert>

    <select id="loadPlayerSeasonInfo" resultType="com.game.season.SeasonInfo" parameterType="java.lang.Long">
        SELECT * FROM p_season_activity WHERE roleId =#{roleId}
    </select>
</mapper>